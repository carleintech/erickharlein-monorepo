		"db:seed": "prisma db seed",
		"clean": "rm -rf node_modules dist .prisma"
	},
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.20.0"
	},
	"devDependencies": {
		"prisma": "^5.20.0",
		"ts-node": "^10.9.2",
		"ts-node-esm": "^0.0.6",
		"typescript": "^5.9.3"
	}
}
