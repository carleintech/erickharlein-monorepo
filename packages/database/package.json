{
	"name": "@erickharlein/database",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"description": "Database layer for Erickharlein Portfolio Ecosystem",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"postinstall": "prisma generate",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
